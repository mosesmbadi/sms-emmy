# Example Terraform variables file
# Copy this to terraform.tfvars and modify as needed

# AWS Configuration
aws_region = "us-east-1"

# Project Configuration
project_name = "sms-emmy"

# EC2 Configuration
instance_type  = "t3.micro"  # 2 vCPUs, 1 GB RAM - good for development/testing
admin_username = "ubuntu"

# Network Configuration
vpc_cidr           = "10.0.0.0/16"
public_subnet_cidr = "10.0.1.0/24"

# Security Configuration
# Restrict this to your IP for better security in production
allowed_ssh_cidr = "0.0.0.0/0"

# Tags
common_tags = {
  Environment = "development"
  Project     = "sms-emmy"
  Owner       = "devops-team"
  CreatedBy   = "terraform"
  Purpose     = "SMS messaging application"
}
